<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Description</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% for feed in @feeds %>
  <tr>
    <td><%=h feed.title %></td>
    <td><%=h feed.url %></td>
    <td><%=image_tag feed.image if feed.image %></td>
    <td><%=h feed.description %></td>
    <td><%=feed.created_at.to_s(:db) %></td>
    <td><%=feed.updated_at.to_s(:db) %></td>
    <td><%= link_to 'Destroy', admin_feed_url(feed), :confirm => 'Are you sure?', :method => :delete, :class => 'button' %></td>
    <td><%= link_to 'Fetch', fetch_admin_feed_url(feed), :confirm => 'Are you sure?', :method => :post, :class => 'button' %></td>
  </tr>
<% end %>
</table>
<div>
<%= link_to t(:import_site), new_admin_feed_url, :class => 'button' %>
</div>

