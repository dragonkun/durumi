<h1>Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<table style="margin:0.5em auto;">
<tr>
  <th><%= label_tag 'login' %></th>
</tr>
<tr>
  <td><%= f.text_field :login, { :class => 'text' } %></td>
</tr>
<tr>
  <td><p id="login_check"></p></td>
</tr>
<tr>
  <th><%= label_tag 'email' %></th>
</tr>
<tr>
  <td><%= f.text_field :email, { :class => 'text' } %></td>
</tr>
<tr>
  <td><p id="email_check"></p></td>
</tr>
<tr>
  <th>
  <p><%= label_tag 'password' %><br/>
  </th>
</tr>
<tr>
  <td>  
  <%= f.password_field :password, { :class => 'text' } %></p>
  </td>
</tr>
<tr>
  <th>
  <p><%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
  </th>
</tr>
<tr>
  <td>
  <%= f.password_field :password_confirmation, { :class => 'text' } %></p>
  </td>
</tr>
<tr>
  <td>
    <p id="password_check"></p>
  </td>
</tr>
<tr>
  <td><%= submit_tag 'Sign up' %></td>
</tr>
</table>

<% end -%>

