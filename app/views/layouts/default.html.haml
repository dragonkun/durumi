%html
  %head
    %title
    %link{:rel => 'stylesheet', :href => '/stylesheets/screen.css', :type => 'text/css', :media => 'screen, projection'}
    %link{:rel => 'stylesheet', :href => '/stylesheets/print.css', :type => 'text/css', :media => 'print'}
    / [if IE]<link rel="stylesheet" href="../../blueprint/ie.css" type="text/css" media="screen, projection"> 
    %link{:rel => 'stylesheet', :href => '/stylesheets/plugins/fancy-type/screen.css', :type => 'text/css', :media => 'screen, projection'}
    %link{:rel => 'stylesheet', :href => '/stylesheets/default.css', :type => 'text/css', :media => 'all'}
    %script{:type => 'text/javascript', :src => '/javascripts/jquery.js'}
    %script{:type => 'text/javascript', :src => '/javascripts/application.js'}
  %body
    .container
      #menu.span-24.last
        %ul
          %li.home
            %a{:href => root_url} 홈
          - if logged_in?
            %li
              %a{:href => logout_url} 로그아웃
          - else
            %li
              %a{:href => login_url} 로그인
            %li
              %a{:href => signup_url} 회원가입
      #header.span-24.last
        %h1 
          %a{:href => root_url} Durumi
      #submenu.span-6
        - if logged_in?
          #profile=current_user.login
        %h2 Submenu
        %ul
          %li
            %a{:href => ''} My feed
          %li
            %a{:href => ''} Favorites
          %li
            %a{:href => ''} Friends
          %li
            %a{:href => '/items'} Everyone
      #main.span-17.last
        - if flash[:notice]
          #flash
            = flash[:notice]
        = yield
      #footer.span-24.last

