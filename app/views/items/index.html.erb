<h1>Listing items</h1>

<table>
  <tr>
    <th>Feed</th>
    <th>Title</th>
    <th>Link</th>
    <th>Guid</th>
    <th>Author</th>
    <th>Body</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% for item in @items %>
  <tr>
    <td><%=h item.feed_id %></td>
    <td><%=h item.title %></td>
    <td><%=h item.link %></td>
    <td><%=h item.guid %></td>
    <td><%=h item.author %></td>
    <td><%=h item.body %></td>
    <td><%=h item.created_at %></td>
    <td><%=h item.updated_at %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

